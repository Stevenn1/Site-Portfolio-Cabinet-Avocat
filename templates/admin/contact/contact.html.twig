{% extends 'admin/base.html.twig' %}

{% block title %}Maitre " ADMINISTRATEUR " | Contact {% endblock %}

{% block stylesheets %}
        <link rel="stylesheet" href="/css/admin/contact.css">
{% endblock %}

{% block body %}
    <div class="container-fluid" >
        <div class="row">
            <div class="col-12">

                <div class="row d-flex justify-content-center">
                    <div class="col-5 rounded mt-5 bgColor2" id="messagerieTitleMediaQuerie">
                        <h1 class="text-center mb-0 p-2 text-white">Boite de réception</h1>
                    </div>
                </div>

                <div class="row d-flex justify-content-center" id="PositionCardMain">
                    <div class="col-7" id="messagerieMediaQuerie">

                        <p><span class="text-decoration-underline">
                            Nombre de messages</span> : ({{ contacts.getTotalItemCount }})
                        </p>

                        {% for contact in contacts %}
                            {% if contact.checked == true %}

                                <div class="card p-2 mb-4">

                                    <div class="card-header bgColor1 bg-gradient">
                                        <p class="mb-0 text-white"><span class="fw-bold text-decoration-underline">Message de</span> : <span class="fs-5">{{ contact.firstname }} {{ contact.name }}</span></p>
                                        <p class="mb-0 text-white"><span class="fw-bold text-decoration-underline">Email</span> : <span class="text-muted"> {{contact.email}}</span></p>
                                        <p class="mb-0 text-white"><span class="fw-bold text-decoration-underline">Reçu le</span> : <span class="text-muted"> {{ contact.createdAt | date('d/m/y') }} à {{ contact.createdAt | date('H:i') }}</span></p>
                                    </div>
                                    <div class="p-2 ps-3 bgColor2 text-white">
                                        <p class="mb-0 text-white"><span class="fw-bold text-decoration-underline">Objet</span> : <span> {{ contact.subject}}</span></p>
                                    </div>
                                    <div class="p-3 bg-light rounded-bottom">
                                        <p>{{ contact.message }}</p>
                                    </div>
                                    <div class="mt-2">
                                    <a href="{{ path('admin_contact_show', {'id': contact.id}) }}" class="w-50"><button type="button" class="btn bg-gradient" id="buttonCustom">Gestion du message</button></a>
                                    </div>

                                    <div class="text-center mt-2">
                                        <span class="badge text-bg-success w-75 text-center">Le message a été traité</span>
                                    </div>

                                </div>

                            {% else %}

                                <div class="card p-2 mb-4">

                                    <div class="card-header bgColor1 bg-gradient">

                                        <p class="mb-0 text-white"><span class="fw-bold text-decoration-underline">
                                            Message de</span> : <span class="fs-5">{{ contact.firstname }} {{ contact.name }}</span>
                                        </p>

                                        <p class="mb-0 text-white"><span class="fw-bold text-decoration-underline">
                                            Email</span> : <span class="text-muted"> {{contact.email}}</span>
                                        </p>

                                        <p class="mb-0 text-white"><span class="fw-bold text-decoration-underline">
                                            Reçu le</span> : <span class="text-muted"> {{ contact.createdAt | date('d/m/y') }} à {{ contact.createdAt | date('H:i') }}</span>
                                        </p>

                                    </div>

                                    <div class="p-2 ps-3 bgColor2 text-white">

                                        <p class="mb-0 text-white"><span class="fw-bold text-decoration-underline">
                                            Objet</span> : <span> {{ contact.subject}}</span>
                                        </p>

                                    </div>
                                    <div class="p-3 bg-light rounded-bottom">
                                    
                                        <p>{{ contact.message }}</p>
                                    </div>

                                    <div class="mt-2">
                                        <a href="{{ path('admin_contact_show', {'id': contact.id}) }}" class="w-50"><button type="button" class="btn bg-gradient" id="buttonCustom">Gestion du message</button></a>
                                    </div>

                                </div>

                            {% endif %}
                        {% endfor %}

                        <div class="row justify-content-center mb-5">
                            <div class="col-3 d-flex justify-content-center">{{ knp_pagination_render(contacts) }}</div>
                        </div>

                    </div>
                </div>
            
            </div>
        </div>
    </div>

{% endblock %}