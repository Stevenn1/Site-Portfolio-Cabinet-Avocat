{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/contact.css">
{% endblock %}

{% block title %}Maitre " ADMINISTRATEUR " | Me contacter{% endblock %}

{% block body %}

    <div class="row d-flex justify-content-center mb-5" >
        <div class="col-5 bg-light layoutCard" id="contactMediaQuerie">

                
            {% if checkMode %}
                {% if is_granted('ROLE_ADMIN') %}

                    <div class="d-flex justify-content-center pt-3">
                        <h2>Traitement du message</h2>
                    </div>

                {% endif %}

            {% else %}

                <div class="d-flex justify-content-center pt-3">
                    <h2>Me contacter</h2>
                </div>

            {% endif %}

            {{ form_start(form)}}
                <div class="d-flex mt-3 mb-3">
                    <div class="me-5">{{ form_row(form.name, {'attr': {'placeholder': "Votre nom"}})}}</div>
                    <div class="">{{ form_row(form.firstname, {'attr': {'placeholder': "Votre prénom"}})}}</div>
                </div>

                <div class="w-75">
                    {{ form_row(form.email, {'attr': {'placeholder': "Votre email"}})}}
                </div>

                <div class="mt-3 mb-3">
                    {{ form_row(form.subject, {'attr': {'placeholder': "Objet de votre demande"}})}}
                </div>

                <div class="">
                    {{ form_row(form.message, {'attr': {'placeholder': "Veuillez tapez votre message...", 'class': "blop"}})}}
                </div>

                <div class="mt-3 mb-3">
                    {{ form_row(form.rgpd)}}
                </div>

                {% if checkMode %}

                    {{ form_row(form.checked)}}

                {% else %}

                    <div id="hidden">
                        {{ form_row(form.checked)}}
                    </div>

                {% endif %}

                <div class="d-flex justify-content-center">
                    {{ form_row(form.submit)}}
                </div>

            {{ form_end(form)}}
            
        </div>


        <div class="col-4 contactFiche pb-3" id="adressMediaQuerie">

            <div class="d-flex justify-content-center pt-3">
                <h2 class="colorWhite text-center">Contactez votre avocat</h2>
            </div>

            <div class="d-flex justify-content-center">
                <p class="fw-lighter colorWhite text-decoration-underline ">
                    Maitre " ADMINISTRATEUR "
                </p>
            </div>

            <div class="d-flex justify-content-center mt-1 mb-3">
                <i class="fa-solid fa-map-location-dot me-3"></i>
                <p class="colorWhite me-2 fw-normal">
                    <span>Adresse:</span>
                </p>
                <p class="colorWhite">
                    [ ADRESSE ] <br> [CODE POSTALE]
                </p>
            </div>

            <div class="d-flex justify-content-center mb-3">
                <i class="fa-solid fa-phone me-3"></i>
                <p class="colorWhite">
                    <span class="me-2">Téléphone:</span>
                        [ NUMERO DE TEL ]
                </p>
            </div>

            <div class="d-flex justify-content-center">
                <i class="fa-regular fa-paper-plane me-3"></i>
                <p class="colorWhite">
                    <span class="">Email:</span>
                        admin.avocat@yahoo.com
                </p>
            </div>


            <div class="ratio ratio-16x9 mt-3">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d10123.200407053613!2d2.4632397514522077!3d49.23928398595157!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sfr!2sfr!4v1675959882292!5m2!1sfr!2sfr" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>

        </div>
    </div>

{% endblock %}